<project name="Gamma" default="dist" basedir=".">
    <description>
        MGL 7361 A2011 Ã©quipe Gamma
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="main_test" location="main_test"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>

    <!-- Create the time stamp -->
  	<tstamp> 
		<format property="touch.time" pattern="yyyy-MM-dd_hh-mm-aa" offset="-5" unit="hour"/>
	</tstamp>

  <target name="init">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
  	    description="compile the source ">
    <!-- Compile the java code from ${src} into ${build} -->
  	<javac srcdir="${src}" destdir="${build}" includeantruntime="false"/>

  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/Gamma-${DSTAMP}.jar" basedir="${build}"/>
  </target>

  <target name="run" depends="dist" description="on execute!!">
  	    <java classname="ca.uqam.mgl7361.a2011.gamma.test.TestMain">
  	      <classpath refid="classpath.runtime"/>
  	    </java>
  </target>
	
  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
  	<delete dir="${buildtest}"/>
  </target>
</project>